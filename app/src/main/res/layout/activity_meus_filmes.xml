<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MeusFilmes">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trazer meus filmes"
        android:onClick="buscarMeusFilmes"
        android:id="@+id/btnMeusFilmes"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trazer filme por titulo"
        android:onClick="meuFilmeTitulo"
        android:id="@+id/btnMeuFilmeTitulo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titulo do filme"
        android:id="@+id/trazerTitulo"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:visibility="gone"
        android:scrollbars="vertical"
        >

        <ImageView
            android:id="@+id/poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="3"
            />

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="titulo do filme"/>

        <TextView
            android:id="@+id/textClasssificacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_gravity="right"
            android:text="classificação"/>

        <Button
            android:id="@+id/btnDeletar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="deletar"/>

    </GridLayout>

</LinearLayout>