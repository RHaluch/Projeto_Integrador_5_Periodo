<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <GridLayout
        android:id="@+id/Grid"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="8"
        android:visibility="visible">

        <ImageView
            android:id="@+id/poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="8"
            android:layout_marginRight="5sp"/>

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Titulo:" />

        <TextView
            android:id="@+id/textClasssificacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="Classificação:"/>


        <TextView
            android:id="@+id/textData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:text="Data:"/>

        <TextView
            android:id="@+id/textGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:text="Genero:"/>

        <TextView
            android:id="@+id/textDiretor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:text="Diretor:"/>

        <TextView
            android:id="@+id/textPais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:text="País:"/>

        <TextView
            android:id="@+id/textNotaIMDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="6"
            android:text="Nota IMDB:"/>

        <TextView
            android:id="@+id/textEnredo"
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="7"
            android:text="Enredo:"/>

    </GridLayout>

    <Button
        android:id="@+id/btnDeletar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="deletar"
        android:layout_gravity="left"/>

</LinearLayout>
